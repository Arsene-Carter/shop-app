{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "plugins": [
    "flowtype"
  ],
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
      "no-shadow": "off",
      "no-console": "off",
      "max-len": [1, 80, 2, {"ignoreComments": true}],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}